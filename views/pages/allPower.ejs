
<%- include('../partials/header') %>

<main class="main" id="allPowerMain">
    <div class="container">
        <div class="row row-cols-2 row-cols-md-4">
            <% data.forEach(item => { %>
                <div class="col">
                    <div class="card h-100 power-card">
                        <div class="card-body">
                            <h2 class="card-title">
                                <%= item.power %>
                            </h2>
                        </div>
                        <footer class="card-footer">
                            <p class="card-footer-text">Click <a href="/powers/<%= item.power %>" class="card-footer-link">here</a> to see heroes with this power!</p>
                        </footer>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
